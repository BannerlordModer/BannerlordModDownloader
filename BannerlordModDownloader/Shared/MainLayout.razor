@inherits LayoutComponentBase

<MApp>
    <MAppBar App>
        <MAppBarNavIcon @onclick="() => _drawer = !_drawer"></MAppBarNavIcon>
        <MToolbarTitle>BannerlordModDownloader</MToolbarTitle>
        <MSpacer></MSpacer>
        <MButton Text Color="primary" Target="_blank" Href="https://github.com/BannerlordModer/BannerlordModDownloader">About</MButton>
    </MAppBar>

    <MNavigationDrawer App @bind-Value="_drawer">
         <MList Nav Routable>
            <MListItem Href="/" ActiveClass="primary--text">
                <MListItemIcon>
                    <MIcon>mdi-magnify</MIcon>
                </MListItemIcon>
                <MListItemContent>
                    <MListItemTitle>搜索</MListItemTitle>
                </MListItemContent>
            </MListItem>
            <MListItem Href="/download" ActiveClass="primary--text">
                <MListItemIcon>
                    <MIcon>mdi-download</MIcon>
                </MListItemIcon>
                <MListItemContent>
                    <MListItemTitle>下载中</MListItemTitle>
                </MListItemContent>
            </MListItem>
            <MListItem Href="/library" ActiveClass="primary--text">
                <MListItemIcon>
                    <MIcon>mdi-apps</MIcon>
                </MListItemIcon>
                <MListItemContent>
                    <MListItemTitle>库</MListItemTitle>
                </MListItemContent>
            </MListItem>
            <MListItem Href="/publish" ActiveClass="primary--text">
                <MListItemIcon>
                    <MIcon>mdi-publish</MIcon>
                </MListItemIcon>
                <MListItemContent>
                    <MListItemTitle>发布</MListItemTitle>
                </MListItemContent>
            </MListItem>
            <MListItem Href="/options" ActiveClass="primary--text">
                <MListItemIcon>
                    <MIcon>mdi-cog</MIcon>
                </MListItemIcon>
                <MListItemContent>
                    <MListItemTitle>设置</MListItemTitle>
                </MListItemContent>
            </MListItem>
        </MList>
    </MNavigationDrawer>

    <MMain>
        <MContainer Fluid>
            <MErrorHandler>
                @Body
            </MErrorHandler>
        </MContainer>
    </MMain>
</MApp>

@code {

    private bool? _drawer;

}
